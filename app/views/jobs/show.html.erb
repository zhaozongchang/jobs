<div class="pull-right">
  <%= link_to("编辑", edit_job_path(@job), class: "btn btn-default")%>
  <%= link_to("删除", job_path(@job), class: "btn btn-default",method: :delete, data: {confirm: "你确定删除吗？"}) %>
</div>
<div id="jobs">
  <div class="job">
    <h2><%= @job.title %></h2>
    <p><%= @job.description %></p>
    <p><%= @job.company %></p>
  </div>
</div>
