<div class="pull-right">
  <%= link_to("添加工作", new_admin_job_path, class: "btn btn-default" ) %>
</div>

<div id="jobs">
  <% @jobs.each do |job| %>
  <div class="job">
    <h2><%= link_to(job.title, job_path(job) )%></h2>
    <p><%= job.company %></p>
    <p><%= job.created_at %></p>

      <%= link_to("编辑", edit_admin_job_path(job), class: "btn btn-default") %>
      <%= link_to("删除", admin_job_path(job),class: "btn btn-default", :method => :delete, :data => { :confirm => "Are you sure?" }) %>

  </div>
  <% end %>
</div>
